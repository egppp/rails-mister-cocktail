<h1><%= @cocktail.name%></h1>
<div class="d-flex p-5 justify-content-around">
  <div class="container">
    <h3>Cocktail formula:</h3>
    <% @doses.each do |dose| %>
      <p><%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fas fa-times"></i>
      <% end %>
      </p>
    <% end %>
  </div>
  <div class ="container">
    <h3>Add to the cocktail formula:</h3>
      <div class="container">
        <%= simple_form_for [ @cocktail, @dose ] do |f| %>
        <%= f.association :ingredient, as: :select %>
        <%= f.input :description %>
        <%= f.submit %>
        <% end %>
      </div>
  </div>
</div>
